<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_back"
        android:id="@+id/include3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:id="@+id/lltv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:text="姓名"
                            android:textSize="18sp" />
                        <EditText
                            android:id="@+id/name_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:text="电话"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/phone_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/lltv1"
                        android:background="#5e5e5e">

                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp">

                    <LinearLayout
                        android:id="@+id/lltv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/age_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:text="年龄"
                            android:textSize="18sp" />
                        <EditText
                            android:id="@+id/age_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sex_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.25"
                            android:text="性别"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/sex_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/lltv2"
                        android:background="#5e5e5e">

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="55dp">

                    <LinearLayout
                        android:id="@+id/lltv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/as_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.7"
                            android:text="主治科目"
                            android:textSize="18sp" />
                        <EditText
                            android:id="@+id/as_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/al_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="0.7"
                            android:text="医师职称"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/al_ed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textSize="18sp" />

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/rl1"
                android:background="#45d6d6d6"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/personrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/first">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rec" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="个人介绍"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/person_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/civ2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:hint="请输入名字"
                    android:background="@null"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/imageView"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/up" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:text="请输入个人简介"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/civ2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@+id/civ2"
                    android:layout_alignBottom="@+id/civ2" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/personrl"
                android:background="#45d6d6d6"
                android:orientation="horizontal" />


            <RelativeLayout
                android:id="@+id/messagerl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/second">


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rec" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在门诊信息"
                    android:textSize="16sp"
                    android:layout_alignTop="@+id/imageView9"
                    android:layout_toEndOf="@+id/imageView9"
                    android:layout_marginStart="5dp"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/imageView9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#d6d6d6"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/messageiv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="45dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/up" />

                <EditText
                    android:id="@+id/messagename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入门诊名称"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/messageiv"
                    android:layout_toEndOf="@+id/messageiv" />

                <EditText
                    android:id="@+id/messagedoctor_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messagename_tv"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:layout_toEndOf="@+id/messageiv"
                    android:hint="请输入负责医师"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/messagescore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messagedoctor_tv1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/messageiv"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/messagescore_tv"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:background="#d6d6d6"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/phonell"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/divider2"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="3"
                        android:src="@drawable/phone" />

                    <EditText
                        android:id="@+id/messagephone_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="40"
                        android:hint="请输入电话"
                        android:background="@null"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="3"
                        android:src="@drawable/to" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/phonell"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:background="#d6d6d6"
                    android:orientation="horizontal" />


                <LinearLayout
                    android:id="@+id/addressll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/divider3"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="3"
                        android:src="@drawable/address" />

                    <EditText
                        android:id="@+id/adress_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="40"
                        android:hint="请输入街道地址"
                        android:background="@null"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="3"
                        android:src="@drawable/to" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/addressll"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:background="#d6d6d6"
                    android:orientation="horizontal" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ3"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/up"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/messagedoctor_tv2"
                    android:layout_marginStart="15dp"
                     />

                <TextView
                    android:id="@+id/messagedoctor_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请上传营业执照"
                    android:textSize="14sp"
                    android:layout_below="@+id/addressll"
                    android:layout_alignStart="@+id/imageView9"
                    android:layout_marginTop="17dp" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/include3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="9dp"
        android:text="认证"
        android:textColor="#fff"
        android:textSize="18sp"/>


</RelativeLayout>
